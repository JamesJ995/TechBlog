<div class='row mb-4 post'>
  <div class='col-md-5'>
    <h2>
      <h2>{{title}}</h2>
    </h2>
    <p>Posted on:
      {{user.userName}}
      {{format_date date_created}}</p>
  </div>
  <div class='col-md-7'>
    <p>
      {{text}}
    </p>
  </div>
</div>
{{>comments}}

<div class='col-md-6'>
  <h3>Add a comment:</h3>

  <form class='form new-comment-form'>
    <div class='form-group'>
      <label for='comment-text'>comment:</label>
      <input class='form-input' type='text' id='comment-text' name='comment-text' />
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
  </form>
</div>