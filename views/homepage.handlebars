<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class='row mb-4 project'>
    <div class='col-md-5'>
      <h2>
        <a href='/project/{{post.id}}'>{{post.title}}</a>
      </h2>
      <p>
        <span for='img' aria-label='money'>ðŸ’²</span>
        <!-- Pass needed_funding value to the helper function -->
        <span class='post-title'>{{post.title}}</span>
      </p>
      <p>Posted by:
        {{user.userName}}
        on
        {{format_date post.date_created}}</p>
    </div>
    <div class='col-md-7'>
      <p>
        {{post.text}}
      </p>
    </div>
  </div>
{{/each}}